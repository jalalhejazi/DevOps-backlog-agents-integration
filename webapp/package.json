{
  "name": "backlog-md-demo",
  "version": "1.0.0",
  "description": "A static HTML5 demo page for backlog.md CLI tool",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 1234 -c-1",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step needed for static HTML'",
    "serve": "npm run start",
    "docker:build": "docker build -t backlog-md-demo .",
    "docker:run": "docker run -d --name backlog-md-demo -p 1234:1234 backlog-md-demo",
    "docker:stop": "docker stop backlog-md-demo && docker rm backlog-md-demo",
    "docker:test": "chmod +x docker-test.sh && ./docker-test.sh"
  },
  "keywords": [
    "backlog",
    "task-management",
    "cli",
    "html5",
    "css3",
    "responsive"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "puppeteer": "^22.0.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}